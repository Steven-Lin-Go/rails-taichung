<% if params[:event_id].nil? %>
  <%= simple_form_for @beef do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"}, label: I18n.t('resource.subject')%>
    <%= f.input :tag_list, input_html: { class: "form-control"}, label: I18n.t('resource.tags') %>
    <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'cust' } }, required: true, label: I18n.t('resource.content') %>
  </div>
  <%= f.submit I18n.t('resource.submit'), class: "btn btn-primary pull-right", data: { disable_with: I18n.t('resource.submitting') } %>
  <br>
  <% end %>
<% else %>
  <%= simple_form_for @beef, url:create_from_event_event_beefs_path(params[:event_id]), method: :post do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"}, label: I18n.t('resource.subject')%>
    <%= f.input :tag_list, input_html: { class: "form-control"}, label: I18n.t('resource.tags') %>
    <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'cust' } }, required: true, label: I18n.t('resource.content') %>
  </div>
  <%= f.submit I18n.t('resource.submit'), class: "btn btn-primary pull-right", data: { disable_with: I18n.t('resource.submitting') } %>
  <br>
  <% end %>
<% end %>
